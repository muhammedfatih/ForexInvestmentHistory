@{
    ViewBag.Title = "Profile";
}
@section banner{
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <br />
                <hr />
                <center><h1 class="text-primary">Forex History Login</h1></center>
                <hr />
            </div>
        </div>
    </div>
}
@section featured{
<div class="container-fluid">
    <div class="col-md-3">
        <div class="row-fluid">
            <div class="">
                <div class="well">
                    <h3>Navigation Menu</h3>
                    <ul class="nav nav-list">
                        <li>@Html.ActionLink("Index", "Index", "Home", null, new { @class = "text-success" })</li>
                        <li>@Html.ActionLink("Investments", "Index", "HistoryItem", null, new { @class = "text-success" })</li>
                        <li>@Html.ActionLink("Profile", "Profile", "Member", null, new { @class = "text-success" })</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Member", null, new { @class = "text-success" })</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="">
                <div class="well">
                    <h3>Latest Values</h3>
                    <ul class="nav nav-list">
                        <li>@ViewBag.cur1</li>
                        <li>@ViewBag.cur2</li>
                        <li>@ViewBag.cur3</li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
    <div class="col-md-9 text-primary">
        <h3 class="text-primary">Profile</h3>
        <form method="post" action="">
            <div class="form-group col-lg-6">
                <label class="text-success">Name</label>
                <input type="text" name="name" class="form-control" value="@Model.name" />
            </div>
            <div class="form-group col-lg-6">
                <label class="text-success">Surname</label>
                <input type="text" name="surName" class="form-control" value="@Model.surName" />
            </div>
            <div class="form-group col-lg-6">
                <label class="text-success">Email Address</label>
                <input type="text" name="eMailAddress" class="form-control" value="@Model.eMailAddress" />
            </div>

            <div class="form-group col-lg-6">
                <label class="text-success">Password</label>
                <input type="password" name="password" class="form-control" id="" />
            </div>
            <div class="col-lg-9"></div>
            <div class="col-lg-1"><input type="submit" name="submit" value="Save" class="btn btn-primary" /></div>
            <div class="col-lg-2"></div>
        </form>
        <div class="col-lg-12">@Html.ActionLink("Return to Dashboard", "Index", "Forex", null, new { @class = "text-info" })</div>

    </div>
</div>
}