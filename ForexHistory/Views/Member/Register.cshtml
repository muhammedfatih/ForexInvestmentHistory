@{
    ViewBag.Title = "Register";
}
@section banner{
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <br />
                <hr />
                <center><h1 class="text-primary">Forex History Register</h1></center>
                <hr />
            </div>
        </div>
    </div>
}
@section featured{
<div class="container-fluid">
    <section class="container">
        <div class="container-page">
            <div class="col-lg-3"></div>
            <div class="col-md-6">
                <h3 class="text-primary">Registration</h3>
                <form method="post" action="">
                    <div class="form-group col-lg-6">
                        <label class="text-success">Name</label>
                        <input type="text" name="name" class="form-control" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="text-success">Surname</label>
                        <input type="text" name="surName" class="form-control" />
                    </div>
                    <div class="form-group col-lg-6">
                        <label class="text-success">Email Address</label>
                        <input type="text" name="eMailAddress" class="form-control" />
                    </div>

                    <div class="form-group col-lg-6">
                        <label class="text-success">Password</label>
                        <input type="password" name="password" class="form-control" id="" />
                    </div>
                    <div class="col-lg-9"></div>
                    <div class="col-lg-1"><input type="submit" name="submit" value="Register" class="btn btn-primary" /></div>
                    <div class="col-lg-2"></div>
                </form>
                <div class="col-lg-12">@Html.ActionLink("Return to Home Page", "Index", "Home", null, new { @class = "text-info" })</div>
                <div class="col-lg-12">@Html.ActionLink("Go to Login Page", "Login", "Member", null, new { @class = "text-info" })</div>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </section>
</div>
}